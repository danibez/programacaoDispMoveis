<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicial">

  <TextView
      android:id="@+id/texto"
      android:layout_width="66dp"
      android:layout_height="74dp"
      android:fontFamily="sans-serif-medium"
      android:text="0"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="48sp"
      app:layout_constraintBottom_toTopOf="@+id/incrementa"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.625" />

  <Button
      android:id="@+id/incrementa"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="24dp"
      android:layout_marginBottom="228dp"
      android:backgroundTint="#1E88E5"
      android:text="Incrementa"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/texto"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/tele"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Telefone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/texto"
      tools:layout_editor_absoluteY="326dp" />
</androidx.constraintlayout.widget.ConstraintLayout>